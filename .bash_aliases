# update our debian/ubuntu box
alias update='sudo yum update'
 
# make grep output colorful 
alias grep='grep --color=auto'

# monitor brightness commands
alias monitor-brightness-0.1='xrandr --output DP-1 --brightness 0.1'
alias monitor-brightness-0.2='xrandr --output DP-1 --brightness 0.2'
alias monitor-brightness-0.3='xrandr --output DP-1 --brightness 0.3'
alias monitor-brightness-0.4='xrandr --output DP-1 --brightness 0.4'
alias monitor-brightness-0.5='xrandr --output DP-1 --brightness 0.5'
alias monitor-brightness-0.6='xrandr --output DP-1 --brightness 0.6'
alias monitor-brightness-0.7='xrandr --output DP-1 --brightness 0.7'
alias monitor-brightness-0.8='xrandr --output DP-1 --brightness 0.8'
alias monitor-brightness-0.9='xrandr --output DP-1 --brightness 0.9'
alias monitor-brightness-1='xrandr --output DP-1 --brightness 1'

# main screen brightness commands
alias main-brightness-0.1='xrandr --output eDP-1 --brightness 0.1'
